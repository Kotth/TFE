<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialComponents.AppBarLayout.PrimarySurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/returnButton"
            android:layout_width="36dp"
            android:layout_height="54dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            app:srcCompat="@drawable/outline_arrow_back_white_24" />
    </com.google.android.material.appbar.AppBarLayout>

    <Spinner
        android:id="@+id/langSpinner"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:popupBackground="@drawable/text_border"
        android:prompt="@string/lang"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/emailAddressModify"
        app:layout_constraintEnd_toEndOf="@+id/emailAddressModify"
        app:layout_constraintStart_toStartOf="@+id/emailAddressModify" />

    <EditText
        android:id="@+id/emailAddressModify"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:autoText="false"
        android:background="@drawable/text_border"
        android:capitalize="none"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="@string/adresse_mail"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordModify"
        app:layout_constraintEnd_toEndOf="@+id/passwordModify"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordModify" />

    <EditText
        android:id="@+id/passwordModify"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="@string/mot_de_passe"
        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="@+id/saveButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/saveButton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/sauvegarder"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@color/lightBlue"
        app:cornerRadius="30dp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>