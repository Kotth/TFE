<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.messaging.spik">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spik">

        <activity android:name="com.messaging.spik.homemessages.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.messaging.spik.registerlogin.LoginActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.messaging.spik.registerlogin.RegisterActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.messaging.spik.modify.ModifyActivity"/>
        <activity android:name="com.messaging.spik.modify.PasswordActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.messaging.spik.modify.LangActivity"/>
        <activity android:name="com.messaging.spik.modify.DeleteActivity"/>
        <activity android:name="com.messaging.spik.homemessages.MessageActivity"
            android:windowSoftInputMode="adjustResize"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>



</manifest>